    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Devils_Auth after="Mage_Adminhtml">Devils_Auth_Adminhtml</Devils_Auth>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <devils_auth>
                    <file>devils/auth.xml</file>
                </devils_auth>
            </updates>
        </layout>
    </adminhtml>
    -->
    <default>
        <devils_auth>
            <general>
                <display>0</display>
            </general>
            <facebook>
                <enabled>0</enabled>
                <app_id></app_id>
                <app_secret></app_secret>
            </facebook>
            <google>
                <enabled>0</enabled>
                <app_id></app_id>
                <app_secret></app_secret>
            </google>
            <vkontakte>
                <enabled>0</enabled>
                <app_id></app_id>
                <app_secret></app_secret>
            </vkontakte>
            <soundcloud>
                <enabled>0</enabled>
                <app_id></app_id>
                <app_secret></app_secret>
            </soundcloud>
        </devils_auth>
    </default>
</config>